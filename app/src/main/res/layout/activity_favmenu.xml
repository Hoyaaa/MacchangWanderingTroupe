<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/saved_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 1) 상단 앱바: Ai 건강식단 + 마이페이지 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_logo_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ai"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/brandSecondary"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_logo_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="건강식단"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_mypage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="마이페이지"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mypage"/>
    </LinearLayout>

    <!-- 2) 세그먼트 탭: 왼쪽(미선택) / 오른쪽(선택) -->
    <LinearLayout
        android:id="@+id/segment_tabs"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_segment_container"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_health_state"
            style="@style/SegmentTab"
            android:text="나의 건강 상태"
            android:textSize="22sp"
            android:background="@drawable/bg_tab_unselected"/>

        <TextView
            android:id="@+id/tab_saved_menu"
            style="@style/SegmentTab"
            android:text="찜한 식단"
            android:textSize="22sp"
            android:background="@drawable/bg_tab_selected"/>
    </LinearLayout>

    <!-- 3) 그리드 목록(3열) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_saved_menus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:fadingEdgeLength="0dp"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@id/segment_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
