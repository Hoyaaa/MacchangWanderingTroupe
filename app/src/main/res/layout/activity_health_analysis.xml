<?xml version="1.0" encoding="utf-8"?>
<!--
  activity_health_analysis.xml (센터 정렬 리팩터링)
  - 크기: 라벨/바 폭 350dp 유지
  - 정렬: 구간 라벨/각 섹션 바는 가로 중앙 정렬, 텍스트 라벨은 좌측 유지
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/health_analysis_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!-- 상단 로고 -->
    <LinearLayout
        android:id="@+id/logo_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp">

        <TextView
            android:id="@+id/tv_logo_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ai"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/ai_high"/>

        <TextView
            android:id="@+id/tv_logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건강식단"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/ai_text"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="사용자 건강 분석"
        android:textColor="@color/ai_text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/logo_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 구간 라벨(미만/정상/초과) - 가운데 정렬, 폭 350dp 유지 -->
    <LinearLayout
        android:id="@+id/label_ranges"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_low"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="미만"
            android:textColor="@color/ai_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="정상"
            android:textColor="@color/ai_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_high"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="초과"
            android:textColor="@color/ai_text"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 섹션 1: 체중 -->
    <TextView
        android:id="@+id/tv_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체중"
        android:textColor="@color/ai_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/label_ranges"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 바: 가로 중앙 정렬, 폭 350dp, 라벨과 같은 행 -->
    <LinearLayout
        android:id="@+id/bar_weight"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/ai_gray"
        android:padding="1dp"
        android:clipToPadding="false"
        android:contentDescription="체중 구간: 미만/정상/초과"
        app:layout_constraintTop_toTopOf="@id/tv_weight_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_weight_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_right"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_weight_marker"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_indicator_down"
        android:layout_marginBottom="8dp"
        android:contentDescription="체중 지시자"
        app:layout_constraintBottom_toTopOf="@+id/bar_weight"
        app:layout_constraintStart_toStartOf="@+id/bar_weight"
        app:layout_constraintEnd_toEndOf="@+id/bar_weight"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- 섹션 2: 체지방량 -->
    <TextView
        android:id="@+id/tv_fat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체지방량"
        android:textColor="@color/ai_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/bar_weight"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/bar_fat"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/ai_gray"
        android:padding="1dp"
        android:clipToPadding="false"
        android:contentDescription="체지방량 구간: 미만/정상/초과"
        app:layout_constraintTop_toTopOf="@id/tv_fat_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_fat_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_right"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_fat_marker"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_indicator_down"
        android:layout_marginBottom="8dp"
        android:contentDescription="체지방량 지시자"
        app:layout_constraintBottom_toTopOf="@+id/bar_fat"
        app:layout_constraintStart_toStartOf="@+id/bar_fat"
        app:layout_constraintEnd_toEndOf="@+id/bar_fat"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- 섹션 3: BMI -->
    <TextView
        android:id="@+id/tv_bmi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textColor="@color/ai_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/bar_fat"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/bar_bmi"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/ai_gray"
        android:padding="1dp"
        android:clipToPadding="false"
        android:contentDescription="BMI 구간: 미만/정상/초과"
        app:layout_constraintTop_toTopOf="@id/tv_bmi_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_bmi_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_right"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bmi_marker"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_indicator_down"
        android:layout_marginBottom="8dp"
        android:contentDescription="BMI 지시자"
        app:layout_constraintBottom_toTopOf="@+id/bar_bmi"
        app:layout_constraintStart_toStartOf="@+id/bar_bmi"
        app:layout_constraintEnd_toEndOf="@+id/bar_bmi"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- 알림 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/ai_notice_bg"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/ai_gray"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/bar_bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ic_bulb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="💡"
                android:textSize="18sp"
                android:gravity="center"
                android:contentDescription="알림 아이콘"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_notice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알립니다!"
                    android:textStyle="bold"
                    android:textColor="@color/ai_text"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_notice_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자 정보를 분석해서 알려줌"
                    android:textColor="@color/ai_text"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 하단 확인 버튼 -->
    <Button
        android:id="@+id/btn_finish"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="28dp"
        android:text="완료"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_profile_confirm"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
