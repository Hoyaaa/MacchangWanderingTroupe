<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ───────────── 1) 상단 앱바 ───────────── -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 좌측 로고 텍스트 -->
        <TextView
            android:id="@+id/tv_logo_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ai"
            android:textColor="@color/pink_300"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_logo_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="건강식단"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- 우측 마이페이지 PNG -->
        <ImageButton
            android:id="@+id/btn_mypage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="마이페이지"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mypage"/>
    </LinearLayout>

    <!-- ───────────── 2) 상단 탭 ───────────── -->
    <LinearLayout
        android:id="@+id/segment_tabs"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_segment_container"
        android:padding="2dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_health_state"
            style="@style/SegmentTab"
            android:text="나의 건강 상태"
            android:textSize="22sp"
            android:background="@drawable/bg_tab_selected"/>

        <TextView
            android:id="@+id/tab_saved_menu"
            style="@style/SegmentTab"
            android:text="찜한 식단"
            android:textSize="22sp"
            android:background="@drawable/bg_tab_unselected"/>
    </LinearLayout>

    <!-- ───────────── 3) 오늘 날짜 ───────────── -->
    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="2025.08.20"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/segment_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ───────────── 4) 말풍선 (PNG + 텍스트) ───────────── -->
    <FrameLayout
        android:id="@+id/bubble_container"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_today"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 말풍선 PNG -->
        <ImageView
            android:id="@+id/img_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bubble_bg"
            android:contentDescription="말풍선"/>

        <!-- 말풍선 텍스트 (항상 가운데, 줄바꿈 지원) -->
        <TextView
            android:id="@+id/tv_health_ment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="사용자 건강 분석 멘트"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:inputType="textMultiLine"/>
    </FrameLayout>

    <!-- ───────────── 5) 캐릭터 이미지 (상황별 PNG 교체) ───────────── -->

    <!-- ───────────── 6) 하단 버튼 2개 ───────────── -->
    <ImageView
        android:id="@+id/img_character"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="캐릭터사진"
        android:scaleType="fitCenter"
        android:src="@drawable/character_default"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bubble_container" />

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/img_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_today_menu"
            style="@style/PinkButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="오늘의 식단"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_health_info"
            style="@style/PinkButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="건강 정보"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
